<UniversalBanner@Label>:
#        id: start_banner
#        text: "Pomodoro Timer"
        outline_color: (0, 0, 0)
        outline_width: 3
        size_hint_y: None
        pos_hint: {'top': 1, 'center_x': 0.5}
        font_size: "65dp"

<UniversalButtonImage@Image>:
        y: self.parent.y + 10
        x: self.parent.x
        allow_stretch: True
        width: self.parent.width
        height: self.parent.height - 20

<UniversalBackButton@Button>:
        size_hint: None, None
        width: "65dp"
        height: "65dp"
        pos_hint: {'top': 0.5, 'x': 0.5}
        UniversalButtonImage:
                source: './assets/icons/back-white.png'