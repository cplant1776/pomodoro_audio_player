#===================================
# LOGIN SCREEN
#===================================
<LoginScreen>:
    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            size_hint: 0.2, 1
            padding: "15dp"

            UniversalBackButton:
                on_press: app.root.current = app.root.previous_screen

        BoxLayout
            id: login_layout
            orientation: 'vertical'
            padding: ['10dp','50dp','10dp','50dp']
            spacing: '50dp'

            Label:
                id: login_banner
                text: "Enter Login Information"
                size_hint_y: None
                pos_hint: {'top': 1, 'center_x': 0.5}
                font_size: "65dp"

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, .9
                pos_hint: {"center_x": 0.5, "top": 0.5}
                canvas.before:
                    Color:
                        rgba: 55/255, 55/255, 55/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [50,]

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10

                    Label:
                        text: 'Username/Email'
                        outline_color: 0,0,0,1
                        outline_width: 2
                        font_size: "30dp"

                    TextInput:
                        id: username
                        multiline: False
                        write_tab: False
                        size_hint: 0.5, 0.5
                        pos_hint: {'center_x': 0.5}

                BoxLayout:
                    orientation: 'vertical'
                    padding: 10

                    Label:
                        text: 'Password'
                        outline_color: 0,0,0,1
                        outline_width: 2
                        font_size: "30dp"

                    TextInput:
                        id: password
                        multiline:False
                        write_tab: False
                        password: True
                        size_hint: 0.5, 0.5
                        pos_hint: {'center_x': 0.5}

                Widget:
                    size_hint_y: 0.2

                Button:
                    text: 'Submit'
                    outline_color: 0,0,0,1
                    outline_width: 1
                    pos_hint: {'center_x': 0.5}
                    size_hint: 0.4,0.3
                    on_release: root.open_load_screen(submission_type=str(app.root.session.style), username=username.text, password=password.text)
                Widget:
                    size_hint_y: 0.1

        Widget:
            size_hint: 0.2, 1



