#===================================
# LOGIN SCREEN
#===================================
<LoginScreen>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: ['10dp','50dp','10dp','50dp']
        spacing: '50dp'

        Label:
            id: login_banner
            text: "Enter Login Information"
            size_hint_y: None
            pos_hint: {'top': 1, 'center_x': 0.5}
            font_size: "65dp"

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Username/Email'
                font_size: "30dp"

            TextInput:
                id: username
                multiline: False
                write_tab: False
                size_hint: 0.5, 1
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'vertical'
            padding: 10

            Label:
                text: 'Password'
                font_size: "30dp"

            TextInput:
                id: password
                multiline:False
                write_tab: False
                password: True
                size_hint: 0.5, 1
                pos_hint: {'center_x': 0.5}

        Button:
            text: 'Submit'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.4,0.5
            on_release: root.open_load_screen(submission_type=str(app.root.session.style), username=username.text, password=password.text)
#            on_release: app.root.current = 'LoadingScreen'
#            on_release: root.submit_form(submission_type=str(app.root.session.style), username=username.text, password=password.text)



