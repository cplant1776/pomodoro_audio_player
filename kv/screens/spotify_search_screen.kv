#===================================
# SPOTIFY SEARCH SCREEN
#===================================
<SpotifySearchScreen>:
    BoxLayout:
        id: content_container
        orientation: 'vertical'
        spacing: "30dp"

        Searchbar:
            size_hint: 0.8, 0.1
            pos_hint: {'center_x': 0.5}

        SearchResultsView:
            id: results_scrollview
            size_hint: 1, 0.8

        SubmissionBox:
            size_hint: 1, 0.1


<Searchbar@BoxLayout>:
    BoxLayout:
        id: search_container
        orientation: 'vertical'

        Widget:
            size_hint: 1, 0.4

        BoxLayout:
            id: search_bar
            orientation: 'horizontal'
            spacing: "10dp"

            TextInput:
                id: search_input
                hint_text: 'Search for playlists'
                font_size: 20
                multiline: False
                write_tab: False
                on_text_validate: root.parent.parent.send_search_query(self.text)

            Button:
                id: search_button
                size_hint: 0.1, 1

                on_release: root.parent.parent.send_search_query(root.ids.search_input.text)

                UniversalButtonImage:
                    source: './assets/icons/search-white.png'


<SearchResultsView>:
    bar_width: 4
    bar_inactive_color: 0/255, 140/255, 145/255, 1

    GridLayout:
        id: content_box
        cols: 4
        size_hint_y: None
        height: self.minimum_height
        spacing: 20


<SearchResultsThumbnail>:
    orientation: 'vertical'
    size_hint_y: None
    height: 200

    on_press:
        root.parent.parent.clear_current_selection()
        self.draw_select()

    BoxLayout:
        id: image_box
        size_hint: 1, 0.9

        Image:
            source: root.img_path

    Label:
        id: playlist_name
        text: root.playlist_name
        halign: 'center'
        size_hint_y: None
        text_size: self.width, None
        height: self.texture_size[1]



<SubmissionBox@BoxLayout>:
    orientation: 'vertical'

    BoxLayout:
        id: content_box
        size_hint: 1, 0.2
        orientation: 'horizontal'
        spacing: "20dp"

        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                points: [self.x, self.y + self.height, self.x + self.width, self.y + self.height]

        Widget:

        SearchScreenButton:
            id: submit_button
            text: 'Select'
            on_release:
                root.parent.parent.submit_selection()

        SearchScreenButton:
            id: cancel_button
            text: 'Cancel'
            on_release: root.dismiss_popup()

        Widget:

    Widget:
        size_hint: 1, 0.1


<SearchScreenButton@Button>:
    outline_width: 1
    outline_color: 0, 0, 0, 1