#====================================================
# SPOTIFY PLAYLISTS SCREEN - select spotify playlists
#====================================================
<SpotifyPlaylistsScreen>:
    UniversalBanner:
        id: banner
        text: "Choose Spotify Playlists"

    BoxLayout:
        id: content_container
        orientation: "horizontal"

        BoxLayout:
            id: left_section
            size_hint: 0.2, 1
            padding: "15dp"

            UniversalBackButton:
                on_press: app.root.current = 'SourceScreen'

        BoxLayout:
            id: center_section
            orientation: 'vertical'

            Widget:
                size_hint: 1, 0.2

            BoxLayout:
                id: playlist_select_container
                orientation: "horizontal"
                size_hint: 1, 0.3
                pos_hint: {'center_y': 0.5}
                spacing: "25dp"

                SelectedSpotifyPlaylistBox:
                    id: work_playlist_name
                    display_title: 'Work'

                SelectedSpotifyPlaylistBox:
                    id: rest_playlist_name
                    display_title: 'Rest'

                SelectedSpotifyPlaylistBox:
                    id: long_rest_playlist_name
                    display_title: 'Long Rest'

            SubmitButtonBox:
                id: submit_button_box

        Widget:
            id: right_section
            size_hint: 0.2, 1


<SelectedSpotifyPlaylistBox@BoxLayout>:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        spacing: "10dp"

        Label:
            id: display_title
            text: root.display_title

        SelectPlaylistButton:
            id: select_button

    SpotifyImage:
        id: spotify_img
        source: root.selected_playlist_img_path

    SelectPlaylistLabel:
        id: playlist_name
        text: root.selected_playlist_name
        size_hint: 1, 0.15


<SelectPlaylistButton@Button>:
    outline_color: 0,0,0,1
    outline_width: 1
    text: 'Search'
    on_release:
        app.root.ids.spotify_playlist_screen.show_load(root.parent.parent.display_title)


<SpotifyImage@Image>:
    source: ''
    allow_stretch: True

<SelectPlaylistLabel@Label>:
    size_hint: 1, 0.15
    outline_color: 0,0,0,1
    outline_width: 1


<SubmitButtonBox@BoxLayout>:
    orientation: 'vertical'
    size_hint: 1, 0.2

    Widget:

    Button:
        id: submit_button
        text: "Next"
        pos_hint: {'center_x': 0.5}
        size_hint: 0.3, 0.7

    Widget:

