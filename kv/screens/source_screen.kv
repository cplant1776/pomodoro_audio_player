#===================================
# SOURCE SCREEN - select source
#===================================

<SourceScreenButton@Button>:
    size_hint: None, None
    pos_hint: {"center_x": 0.5}
    height: "30dp"
    width: "200dp"

<SourceScreen>:
    Label:
        id: source_banner
        text: "Choose Audio Source"
        size_hint_y: None
        pos_hint: {'top': 1, 'center_x': 0.5}
        font_size: "65dp"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 0.35
        pos_hint: {'center_x': 0.5, 'top': 0.8}
        spacing: "25dp"

        SourceScreenButton:
            text: "Local Playlist File"
            on_release: app.root.session.style = 'Local'
            on_release: app.root.current = 'LocalFilesScreen'
        SourceScreenButton
            text: "Brain.fm"
            on_release: app.root.session.style = 'BrainFM'
            on_release: app.root.current = 'LoginScreen'
        SourceScreenButton
#        TODO: Look into adding this feature
            text: "Spotify  - NOT ADDED YET"
#            on_release: app.root.session.style = 'Spotify'
#            on_release: app.root.current = 'LoginScreen'