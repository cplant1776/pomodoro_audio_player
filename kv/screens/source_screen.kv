#===================================
# SOURCE SCREEN - select source
#===================================
<SourceScreen>:
    UniversalBanner:
        id: banner
        text: "Choose Audio Source"

    BoxLayout:
        id: content_container
        orientation: "horizontal"

        BoxLayout:
            id: back_box
            padding: "15dp"

            UniversalBackButton:
                on_press: app.root.current = 'StartScreen'

        BoxLayout:
            id: button_box
            orientation: "vertical"
            pos_hint: {'top': 0.75}
            size_hint: 1, 0.25
            spacing: "25dp"

            SourceScreenButton:
                id: local_playlist_button
                text: "Local Playlist File"
                on_release:
                    app.root.session.style = 'Local'
                    app.root.current = 'LocalFilesScreen'

            SourceScreenButton
                id: brain_fm_playlist_button
                text: "Brain.fm"
                on_release:
                    app.root.session.style = 'BrainFM'
                    app.root.current = 'LoginScreen'

            SourceScreenButton
                id: spotify_playlist_button
                text: "Spotify"
                on_release: app.root.session.style = 'Spotify'
                on_release: app.root.current = 'SpotifyPlaylistsScreen'

        BoxLayout:

            Widget:

            Button:
                id: help_button
                pos_hint: {"center_y": 0.1}
#                size_hint: 0.1, 0.1
                size_hint: None, None
                width: "65dp"
                height: "65dp"
                background_color: 0, 0, 0, 0
                on_press: root.pop_help()

                UniversalButtonImage:
                    id: help_image
                    source: './assets/icons/help.png'

            Widget:

<SourceScreenButton@Button>:
    size_hint: None, None
    pos_hint: {"center_x": 0.5}
    height: "30dp"
    width: "200dp"
    outline_color: 0,0,0,1
    outline_width: 1
    on_release: app.root.transition.direction = 'left'
