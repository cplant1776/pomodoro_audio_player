#===================================
# SOURCE SCREEN - select source
#===================================

<SourceScreenButton@Button>:
    size_hint: None, None
    pos_hint: {"center_x": 0.5}
    height: "30dp"
    width: "200dp"

<SourceScreen>:
    Label:
        id: source_banner
        text: "Choose Audio Source"
        size_hint_y: None
        pos_hint: {'top': 0.9, 'center_x': 0.5}
        font_size: "65dp"

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 1
#        pos_hint: {'center_x': 0.5, 'top': 0.8}
#        spacing: "25dp"

        BoxLayout:
            padding: "15dp"
            Button:
                size_hint: None, None
                width: "65dp"
                height: "65dp"
                pos_hint: {'top': 0.5, 'x': 0.5}
#                text: "Back"
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'StartScreen'
                Image:
                    source: './assets/icons/back-white.png'
                    y: self.parent.y + 10
                    x: self.parent.x
                    allow_stretch: True
                    width: self.parent.width
                    height: self.parent.height - 20
        BoxLayout:
            orientation: "vertical"
            Widget:
            BoxLayout:
                orientation: 'vertical'
                spacing: "25dp"
                SourceScreenButton:
                    text: "Local Playlist File"
                    on_release:
                        app.root.transition.direction = 'left'
                        app.root.session.style = 'Local'
                        app.root.current = 'LocalFilesScreen'
                SourceScreenButton
                    text: "Brain.fm"
                    on_release:
                        app.root.transition.direction = 'left'
                        app.root.session.style = 'BrainFM'
                        app.root.current = 'LoginScreen'
                SourceScreenButton
        #        TODO: Look into adding this feature
                    text: "Spotify  - NOT ADDED YET"
        #            on_release: app.root.session.style = 'Spotify'
        #            on_release: app.root.current = 'LoginScreen'
            Widget:
        Widget:
