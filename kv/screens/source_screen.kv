#===================================
# SOURCE SCREEN - select source
#===================================
<SourceScreen>:
    UniversalBanner:
        id: source_banner
        text: "Choose Audio Source"

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 1

        BoxLayout:
            padding: "15dp"
            UniversalBackButton:
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'StartScreen'
        BoxLayout:
            orientation: "vertical"
            Widget:
            BoxLayout:
                orientation: 'vertical'
                spacing: "25dp"
                SourceScreenButton:
                    text: "Local Playlist File"
                    on_release:
                        app.root.session.style = 'Local'
                        app.root.current = 'LocalFilesScreen'
                SourceScreenButton
                    text: "Brain.fm"
                    on_release:
                        app.root.session.style = 'BrainFM'
                        app.root.current = 'LoginScreen'
                SourceScreenButton
        #        TODO: Look into adding this feature
                    text: "Spotify  - NOT ADDED YET"
        #            on_release: app.root.session.style = 'Spotify'
        #            on_release: app.root.current = 'LoginScreen'
            Widget:
        Widget:

<SourceScreenButton@Button>:
    size_hint: None, None
    pos_hint: {"center_x": 0.5}
    height: "30dp"
    width: "200dp"
    outline_color: 0,0,0,1
    outline_width: 1
    on_release: app.root.transition.direction = 'left'
