#===================================
# BROWSE FILES SCREEN
#===================================

<BrowseFilesScreen>:
    BoxLayout:
#        size: root.size
#        pos: root.pos
        size_hint: 1, 1
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                outline_color: 0,0,0,1
                outline_width: 1
                on_release: root.cancel()

            Button:
                text: "Load"
                outline_color: 0,0,0,1
                outline_width: 1
                on_release: root.load(filechooser.path, filechooser.selection)

