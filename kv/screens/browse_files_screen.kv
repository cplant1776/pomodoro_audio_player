#===================================
# BROWSE FILES SCREEN
#===================================
#: import os os

<BrowseFilesScreen>:
    BoxLayout:
#        size: root.size
#        pos: root.pos
        size_hint: 1, 1
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: app.root.ids.local_files_screen.saved_directory if app.root else ''
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                outline_color: 0,0,0,1
                outline_width: 1
                on_release: root.cancel()

            Button:
                text: "Load"
                outline_color: 0,0,0,1
                outline_width: 1
                on_release: root.load(filechooser.path, filechooser.selection)

