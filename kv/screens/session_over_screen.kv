#===================================
# Session Over Screen
#===================================
<SessionOverScreen>:
    BoxLayout:
        id: content_container
        orientation: "vertical"
        spacing: "100dp"

        UniversalBanner:
            id: banner
            text: "Repeat session?"

        ConnectingLabel:
            id: wait_animation

        BoxLayout:
            id: button_box
            orientation: "horizontal"
            size_hint_x: 0.5
            spacing: "50dp"
            pos_hint: {"center_x": 0.5}

            SessionOverButton:
                id: yes_button
                text: "Yes"
                on_press:
                    app.root.current = 'SessionScreen'
            SessionOverButton:
                id: no_button
                text: "No"
                on_press:
                    app.root.end_app()
        Widget:


<ConnectingLabel>:
    angle: 0
    canvas:
        Color:
            rgb: 1,0,1
        Line:
            circle:self.center_x, self.center_y, 90, 0, self.angle
            width: 5


<SessionOverButton@Button>:
    outline_color: 0,0,0,1
    outline_width: 1
    font_size: "40dp"